{
  "env": {
    "node": true,
    "es6": true,
  },
  "extends": "airbnb-base",
  "rules": {
      "no-use-before-define": ["error", "nofunc"],
      "no-unused-expressions": ["error", {
        "allowShortCircuit": true,
        "allowTernary": true
      }],
      "quotes": ["error", "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }],
      "brace-style": ["error", "stroustrup"]
  }
}
